(define (make-point x y) (cons x y))
(define (x-point point)
  (car point)
)
(define (y-point point ) (cdr point) )
(define (print-point p)
  (newline)
  (display "(")
  (display (x-point p))
  (display ",")
  (display (y-point p))
  (display ")"))

(define (make-segment start end) (cons start end))

(define (start-segment segment) 
